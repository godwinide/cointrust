<div class="main-panel bg-dark">
    <div class="content bg-dark">
        <div class="page-inner">
            <div class="mt-2 mb-4">
                <h1 class="title1 text-light">Make Withrawal</h1>
            </div>

            <div class="row">
                <div class="col card bg-dark shadow-lg p-4">
                    <div>
                        <form method="post">
                            <%- include("./partials/messages.ejs")%>
                                <h5 class="text-light">Payment Mode Used:</h5>
                                <select name="paymentmethod" class="form-control col-lg-4 bg-dark text-light" required>
                                    <option selected value="bank">Bank Transfer</option>
                                </select>
                                <br>
                                <h5 class="text-light">Amount</h5>
                                <input type="number" name="amount" readonly value="<%=amount%>"
                                    class="form-control col-lg-4 bg-dark text-light">
                                <br>
                                <h5 class="text-light">Account Name</h5>
                                <input type="text" required name="amount"
                                    class="form-control col-lg-4 bg-dark text-light">
                                <br>
                                <h5 class="text-light">Account Number</h5>
                                <input type="number" required name="amount"
                                    class="form-control col-lg-4 bg-dark text-light">
                                <br>
                                <h5 class="text-light">Bank Name</h5>
                                <input type="text" required name="amount"
                                    class="form-control col-lg-4 bg-dark text-light">
                                <br>
                                <h5 class="text-light">Withdrawal PIN</h5>
                                <input type="number" required name="pin"
                                    class="form-control col-lg-4 bg-dark text-light">
                                <br>
                                <div>
                                    <input type="submit" class="btn btn-light" value="Complete withdrawal">
                                </div>
                                <input type="hidden" name="amount" value="<%=amount%>">
                        </form>
                    </div>
                </div>
            </div>







        </div>
    </div>
    <footer class="footer bg-dark text-light">
        <div class="container-fluid">
            <div class="text-center row copyright text-align-center">
                <p>All Rights Reserved &copy; CryptoTrade FX 2022</p>
            </div>
        </div>
    </footer>
</div>
</div>
</div>